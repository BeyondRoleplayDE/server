{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@altv"
        ],
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "module": "ESNext",
        "outDir": "./resources",
        "rootDir": "./src",
        "downlevelIteration": true,
        "target": "ESNext"
    },
    "include": [
        "./src/**/*.ts",
        "src/ped-decorator/html/attachments.js",
        "src/ped-decorator/server.js",
        "src/ped-decorator/client.js"
    ],
    "exclude": [
        "node_modules",
        "resources",
        "**/*.json",
        "src-copy",
        "cache",
        "crashdumps",
        "data",
        "modules",
        "postbuild"
    ]
}